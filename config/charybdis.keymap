    keymap {
        compatible = "zmk,keymap";

        BASE {
            bindings = <
&none  &mt LC(Q) Q  &lt 2 L      &mt LCTRL Y  &mt LEFT_SHIFT P  &kp B        &kp Z           &kp F           &kp O        &kp U       &mt LC(SLASH) SLASH  &none
&none  &kp C        &lt 2 R      &mt LCTRL S  &mt LSHIFT T      &kp G        &kp M           &kp N           &kp E        &kp I       &kp A                &none
&none  &kp W        &mt LC(J) J  &lt 5 V      &kp D             &kp K        &kp X           &lt 6 H         &lt 6 COMMA  &kp PERIOD  &kp SINGLE_QUOTE     &none
                                 &mkp LCLK    &lt 1 SPACE       &lt 2 TAB    &sk LEFT_SHIFT  &mo_repeat 2 0
